<h1>Burger Blogger!</h1>

<h2>Uneaten Burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
        data-newDevoured="{{devoured}}"><span class="fa fa-usd"></span></button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <input type="radio" name="devoured" value="0"> I'm Ready
    </div>

    <button type="submit">Add burger</button>
</form>